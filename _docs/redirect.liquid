---
eleventyExcludeFromCollections: true
pagination:
    data: redirects
    size: 1
    alias: redirect
permalink: "{{ redirect.slug }}"
---

<!DOCTYPE html>
<html lang="en-US">
  <meta charset="utf-8">
  <title>Redirecting&hellip;</title>

  {% capture domain %}
  {% if build.environment == 'production' %}{{ site.prod_domain }}{% endif %}
  {% endcapture %}
  {% assign domain = domain | strip %}

  <link rel="canonical" href="{{ domain }}{{ redirect.redirect_to | url }}">
  <script>location="{{ redirect.redirect_to | url }}"</script>
  <meta http-equiv="refresh" content="0; url={{ redirect.redirect_to | url }}">
  <meta name="robots" content="noindex">
  <h1>Redirecting&hellip;</h1>
  <a href="{{ redirect.redirect_to | url }}">Click here if you are not redirected.</a>
</html>
